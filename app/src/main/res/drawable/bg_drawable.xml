<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled -->
    <item
        android:state_enabled="false"
        android:drawable="@drawable/btn_filled_disabled"/>

    <!-- Pressed / Focused -->
    <item
        android:state_pressed="true"
        android:drawable="@drawable/btn_filled_pressed"/>
    <item
        android:state_focused="true"
        android:drawable="@drawable/btn_filled_pressed"/>

    <!-- Normal -->
    <item android:drawable="@drawable/btn_filled_normal"/>
</selector>